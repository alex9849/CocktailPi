<?xml version='1.0' encoding='utf-8'?>
<widget id="net.liggesmeyer.cocktailmaker" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CocktailMaker</name>
    <description>A Quasar Framework app</description>
    <author email="alexander@liggesmeyer.net" href="https://alexander.liggesmeyer.net/">
        Alexander Liggesmeyer
    </author>
    <icon src="logo/logo-128x128.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="about:*" />
</widget>
